<%= render 'wellcome/header2' %>
<div class="login-main-class">
  <header>
    <div class="overlay"></div>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
      <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
    </video>
    <div class="container h-100">
      <div class="d-flex h-100 text-center align-items-center">
        <div class="text-center container-fluid col-md-12 col-sm-12 col-xs-12" id="login_form1">
          <h2>Log in Form</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field form-group email-username eye-main-div">
              <%= f.label :email, class: "lebel-style"%><br />
              <%= f.email_field :email, autofocus: true, placeholder: "Email or Username", class: "form-control input-wrap person-icon", id: 'user_login_email', required: true %>
            </div>

            <div class="field">
              <%= f.label :password, class: "lebel-style"%><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-wrap person-icon", "data-toggle": "password" , id: 'user_login_password', required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field eye-main-div">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions login-page-button">
              <%= f.submit "Log in", class: "btn-login login-button"%>
            </div>
          <% end %>
          <div class="login-on-signup-page">
            <%= render "devise/shared/links" %>
          </div>
        </div>
        <%= stylesheet_link_tag 'signup_signin' %>
      </div>
    </div>
  </header>
</div>
