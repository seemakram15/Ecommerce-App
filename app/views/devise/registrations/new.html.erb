<%= render 'wellcome/header2' %>
<div class="login-main-class">
  <header>
    <div class="overlay"></div>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
      <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
    </video>
    <div class="container h-100" id="login_form">
      <h2 class="text-center">Sign up Form</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group email-username eye-main-div">
          <%= f.label :first_name, class: "lebel-style" %><br />
          <%= f.text_field :first_name, autocomplete: "off", placeholder: "Enter First Name", class: "form-control input-wrap person-icon", id: 'user_login_password', required: true %>
        </div> 

        <div class="field form-group email-username eye-main-div">
          <%= f.label :last_name, class: "lebel-style" %><br />
          <%= f.text_field :last_name, autocomplete: "off", placeholder: "Enter Last Name", class: "form-control input-wrap person-icon" , id: 'user_login_password', required: true  %>
        </div>

        <div class="field form-group email-username eye-main-div">
          <%= f.label :email, class: "lebel-style" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control ", id: 'user_login_email', required: true  %>
        </div>

        <div class="field form-group email-username eye-main-div">
          <%= f.label :password, class: "lebel-style" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control input-wrap person-icon", "data-toggle": "password" , id: 'user_login_password', required: true %>
        </div>

        <div class="field form-group email-username eye-main-div">
          <%= f.label :password_confirmation , class: "lebel-style"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-Enter Password", class: "form-control input-wrap person-icon", "data-toggle": "password" , id: 'user_login_password', required: true  %>
        </div>

        <div class="actions signup-page-button">
          <%= f.submit "Sign up", class:"signup-button"%>
        </div>
      <% end %>
      <div class="login-on-signup-page">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </header>
</div>
